{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=ecommerce_dev;Username=postgres;Password=postgres"
  },
  "Auth": {
    "Jwt": {
      "Key": "#{JWT_SECRET_KEY}#",
      "Issuer": "#{JWT_ISSUER}#",
      "Audience": "#{JWT_AUDIENCE}#",
      "TokenExpiryMinutes": 15,
      "RefreshTokenExpiryDays": 7
    },
    "Security": {
      "MaxLoginAttempts": 5,
      "LockoutMinutes": 15,
      "RequireEmailVerification": true,
      "MinPasswordLength": 8,
      "RequireUppercase": true,
      "RequireDigit": true,
      "RequireSpecialCharacter": true
    }
  },
  "R2": {
    "BucketName": "#{R2_BUCKET_NAME}#",
    "AccessKey": "#{R2_ACCESS_KEY}#",
    "SecretKey": "#{R2_SECRET_KEY}#",
    "Region": "auto",
    "ServiceURL": "#{R2_SERVICE_URL}#",
    "PublicUrl": "#{R2_PUBLIC_URL}#"
  },
  "ImageKit": {
    "UrlEndpoint": "#{IMAGEKIT_URL_ENDPOINT}#"
  },
  "ImageUpload": {
    "MaxFileSizeBytes": 5242880,
    "ProductMaxFileSizeBytes": 8388608,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".webp", ".gif"],
    "AllowedMimeTypes": ["image/jpeg", "image/png", "image/webp", "image/gif"],
    "MaxUploadsPerMinute": 10,
    "PreSignedUrlExpiry": "00:15:00"
  },
  "CartLimits": {
    "MaxItemsPerCart": 50,
    "MaxQuantityPerItem": 100,
    "MaxCartValue": 10000.00,
    "MaxUniqueProductsPerCart": 20
  },
  "ExchangeRate": {
    "BotApiUrl": "https://apigw1.bot.or.th/bot/public/Stat-ExchangeRate/v2",
    "ClientId": "#{BOT_API_CLIENT_ID}#",
    "StaticRates": {
      "USD": 33.50,
      "EUR": 36.20,
      "GBP": 42.80,
      "JPY": 0.24,
      "AUD": 22.10,
      "CAD": 24.80,
      "SGD": 25.20,
      "CNY": 4.70,
      "KRW": 0.026
    }
  }
}
